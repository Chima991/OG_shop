<h1>Добавить свой товар</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название товара</label>
        <span class="helper-text" data-error="Введите корректное название" data-success="+"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" >
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите корректную цену" data-success="+"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Ввидите URL картинки" data-success="+"></span>
    </div>
    
    <button class="btn btn-primary">Добавить товар</button>
</form>