<h1>Товары</h1>

{{#if goods.length}}
{{#each goods}}
<div class="row">
    <div class="col s5 offset-s0">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}" alt="{{title}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action actions">
          {{!-- target="_blank" открывает страницу в новой вкладке  --}}
          <a href="/goods/{{id}}" target="_blank">Подробнее</a> 
          <a href="/goods/{{id}}/edit?allow=true">Редактировать</a>
          <form action="/card/add" method="POST">
            <button type=submit onclick="amountGoods=prompt('Какое количество товара хотите приобрести?')" class="btn btnprimary">Купить</button>
            <input type="hidden" name="id" amountGoods="amountGoods"  value="{{id}}" >
          </form>
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<p>Товар в дорозі...</p>
<img src="https://www.alltravels.com.ua/wp-content/uploads/2017/07/avia-strua.jpg" align="left" vspace="10" >
{{/if}}